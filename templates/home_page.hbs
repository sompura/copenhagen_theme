<section class="c_hero c_hero--home">
  <div class="c_hero-inner">
    <div class="c_hero-message">{{dc 'welcome_support_message'}}</div>
    <div class="c_hero-search">
      {{search instant=settings.instant_search class='search search-full'}}
    </div>
  </div>
  <img class="c_hero-image" src="{{settings.homepage_background_image}}" alt="{{dc 'welcome_support_message'}}" />
  <div class="c_hero-overlay"></div>
</section>

