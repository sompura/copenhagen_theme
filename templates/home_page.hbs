<div class="container">
  <section class="section c_products">
    <ul>
      {{#each categories}}
        {{#if ../has_multiple_categories}}
          {{#isnt id 360002291372}}
            {{#isnt id 360002304511}}
              {{#isnt id 360002304531}}
                {{#isnt id 360002304551}}
                  <li class="c_products-item">
                    <a href='{{url}}' class="c_products-itemLink" data-id="{{id}}">
                      <div class="c_products-itemVisual">
                        {{#is id 360002296932}}<img src="{{asset 'bo_speakers.png'}}" alt="{{name}}" />{{/is}}
                        {{#is id 360002304491}}<img src="{{asset 'bo_headphones.png'}}" alt="{{name}}" />{{/is}}
                        {{#is id 360002296952}}<img src="{{asset 'bo_televisions.png'}}" alt="{{name}}" />{{/is}}
                        {{#is id 360002296952}}<img src="{{asset 'bo_televisions.png'}}" alt="{{name}}" />{{/is}}
                        {{#is id 360002384932}}<img src="{{asset 'bo_accessories.png'}}" alt="{{name}}" />{{/is}}
                        {{#is id 360002384932}}<img src="{{asset 'bo_accessories.png'}}" alt="{{name}}" />{{/is}}
                        {{#is id 360002405932}}<img src="{{asset 'bo_apps.png'}}" alt="{{name}}" />{{/is}}
                        {{#is id 360002413751}}<img src="{{asset 'bo_others.png'}}" alt="{{name}}" />{{/is}}
                      </div>
                      <h4 class="c_products-itemTitle">{{name}}</h4>              
                    </a>
                  </li>
                {{/isnt}}
              {{/isnt}}  
            {{/isnt}}
          {{/isnt}}
        {{/if}}
      {{/each}}
    </ul>    
  </section>

  {{#each categories}}
    {{#is id 360002291372}}
      {{#each sections}}
        {{#is id 360007112072}}
          {{#each articles}}
            {{#is id 360037095852}}
              <div class="section c_teaserBlock">
                <div class="c_teaserBlock-visual">
                  <img src="{{asset 'bo_setup_customize.jpg'}}" alt="{{title}}" data-speed="1.25" class="c_paralax-image" />
                </div>
                <div class="c_teaserBlock-content">
                  <h3>{{title}}</h3>
                  <p>{{excerpt body characters=100}}</p>
                  <a  href="{{url}}" class="c_teaserBlock-cta">{{dc 'get_started'}}</a>
                </div>
              </div>
            {{/is}}
          {{/each}}
        {{/is}}
      {{/each}}
    {{/is}}
  {{/each}}
  
  <section class="section c_contact">
    <h2>{{dc 'hp_we_are_here'}}</h2>
    <div class="c_contact-chat">
      <div class="c_contact-icon"><img src="{{asset 'ico_instant_chat.svg'}}" alt="{{dc 'contact_chat_cta'}}" /></div>
      <div class="c_contact-content">
        {{dc 'contact_chat'}}
      </div>        
      <div class="c_contact-cta">
        <a href="#" class="c_contact-ctaLink">{{dc 'contact_chat_cta'}}</a>
      </div>        
    </div>
    <div class="c_contact-email">
      <div class="c_contact-icon"><img src="{{asset 'ico_send_email.svg'}}" alt="{{dc 'contact_email_cta'}}" /></div>
      <div class="c_contact-content">
        {{dc 'contact_email'}}
      </div>        
      <div class="c_contact-cta">
        <a href="#" class="c_contact-ctaLink">{{dc 'contact_email_cta'}}</a>
      </div>        
    </div>
    <div class="c_contact-talk">
      <div class="c_contact-icon"><img src="{{asset 'ico_talk.svg'}}" alt="{{dc 'contact_talk_cta'}}" /></div>
      <div class="c_contact-content">
        {{dc 'contact_talk'}}
      </div>        
      <div class="c_contact-cta">
        <a href="#" class="c_contact-ctaLink">{{dc 'contact_talk_cta'}}</a>
      </div>        
    </div>
  </section>

