<section class="c_hero c_hero--inner">
  <div class="c_hero-inner">
    <div class="c_hero-message">{{section.name}}</div>    
  </div>
  {{#is section.id 360007332792}}<img class="c_hero-image" src="{{asset 'bo_header_headphones_e8.jpg'}}" alt="{{section.name}}" />{{/is}}            
  <div class="c_hero-overlay"></div>
</section>

<div class="container">

  <!--<header class="page-header">
    {{#if settings.show_follow_section}}
      {{subscribe}}
    {{/if}}
    {{#if section.description}}
      <p class="page-header-description">{{section.description}}</p>
    {{/if}}
  </header>-->

  {{#if section.articles}}
  <div class="c_promoted-articles">
    <ul>
      {{#each section.articles}}
        {{#if promoted}}
        <li>
          <h3>{{title}}</h3>
          <p>{{excerpt body characters=100}}</p>
          <a href="{{url}}" class="c_promoted-articles-link">Find out ></a>
        </li>       
        {{/if}}
      {{/each}}
    </ul>
  </div>
  {{/if}}

</div>

<div class="container">

  <div class="section-container">
    <section class="section-content">
      {{#if section.articles}}
        <ul class="article-list">
          {{#each section.articles}}
            {{#unless promoted}}
            <li class="article-list-item">                              
              <a href="{{url}}" class="article-list-link">{{title}}</a>>              
            </li>
            {{/unless}}
          {{/each}}
        </ul>      
      {{/if}}

      {{pagination}}

    </section>
  </div>
</div>

<div class="container">
  {{search scoped=false submit=false}}
</div>

<div class="container">    
      {{#if section.sections}}
        <ul class="section-list section-list--collapsed">
          {{#each section.sections}}
          <li class="section-list-item">
              <a href="{{url}}">
                <span>{{name}}</span>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" focusable="false" viewBox="0 0 16 16" aria-hidden="true">
                  <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-width="2" d="M5 14.5l6.1-6.1c.2-.2.2-.5 0-.7L5 1.5"/>
                </svg>
              </a>
            </li>
          {{/each}}
          <a tabindex="0" class="see-all-sections-trigger" aria-hidden="true" id="see-all-sections-trigger" title="{{t 'see_all_sections'}}">{{t 'see_all_sections'}}</a>
        </ul>
      {{/if}}
</div>

<div class="container">
  <section class="section c_contact">
      <div class="c_contact-chat">
        <div class="c_contact-icon"><img src="{{asset 'ico_instant_chat.svg'}}" alt="{{dc 'contact_chat_cta'}}" /></div>
        <div class="c_contact-content">
          {{dc 'contact_chat'}}
        </div>        
        <div class="c_contact-cta">
          <a href="#" class="c_contact-ctaLink">{{dc 'contact_chat_cta'}}</a>
        </div>        
      </div>
      <div class="c_contact-email">
        <div class="c_contact-icon"><img src="{{asset 'ico_send_email.svg'}}" alt="{{dc 'contact_email_cta'}}" /></div>
        <div class="c_contact-content">
          {{dc 'contact_email'}}
        </div>        
        <div class="c_contact-cta">
          <a href="#" class="c_contact-ctaLink">{{dc 'contact_email_cta'}}</a>
        </div>        
      </div>
      <div class="c_contact-talk">
        <div class="c_contact-icon"><img src="{{asset 'ico_talk.svg'}}" alt="{{dc 'contact_talk_cta'}}" /></div>
        <div class="c_contact-content">
          {{dc 'contact_talk'}}
        </div>        
        <div class="c_contact-cta">
          <a href="#" class="c_contact-ctaLink">{{dc 'contact_talk_cta'}}</a>
        </div>        
      </div>
    </section>
</div>