<div class="section">
  <div class="container">
    <!-- Headphone Category Global Article Block -->
    {{#is category.id 360002304491}}
      {{#each sections}}
        {{#is id 360007467251}}
          {{#each articles}}
            {{#is id 360037259952}}
              <div class="section c_teaserBlock">
                <div class="c_teaserBlock-visual">
                  <img src="{{asset 'bo_get_started_headphone.jpg'}}" alt="{{title}}" data-speed="1.25" class="c_paralax-image" />
                </div>
                <div class="c_teaserBlock-content">
                  <h3>{{title}}</h3>
                  <p>{{excerpt body characters=100}}</p>
                  <a  href="{{url}}" class="c_teaserBlock-cta">{{dc 'get_started'}}</a>
                </div>
              </div>
            {{/is}}
          {{/each}}
        {{/is}}
      {{/each}}      
    {{/is}}
  </div>
</div>


