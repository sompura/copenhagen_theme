<section class="section c_hero">
  <div class="c_hero-content"><h1>{{category.name}}</h1></div>
  <div class="c_hero-visual">    
    {{#is category.id 360002304491}}<img src="{{asset 'bo_header_headphones.jpg'}}" alt="{{category.name}}" />{{/is}}          
  </div>
</section>

<div class="container">
  <section class="section c_products c_products--small">
    <ul>
      {{#each sections}}  
        {{#isnt id 360007467251}}      
          <li class="c_products-item">
            <a href='{{url}}' class="c_products-itemLink">
              <div class="c_products-itemVisual"><img src="{{asset 'default_item_visual.png'}}" data-image="categories_sections_{{id}}" /></div>
              <h4 class="c_products-itemTitle">{{name}}</h4>              
            </a>
          </li>
        {{/isnt}}
      {{/each}}
    </ul>
  </section>
